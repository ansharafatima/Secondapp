<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dancing_script_semibold"
            android:paddingBottom="16dp"
            android:text="Settings"
            android:textAlignment="center"
            android:textColor="#330202"
            android:textSize="34sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#310202"
            android:hint="Change Username"
            android:textColor="#2C0101" />

        <Button
            android:id="@+id/saveSettingsBtn"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/worder2"
            android:fontFamily="@font/dancing_script_semibold"
            android:text="Save"
            android:textColor="#400404"
            android:textSize="34sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>